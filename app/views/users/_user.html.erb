
 <div class="card card-block" style="margin-left:.5rem;margin-right:.5rem;display:inline-block;max-width:20rem;background-color:rgba(200,200,200,1.0);">
   <img class="card-img-top" src="<%= gravatar_img_url user.email %>">
   <div class="card-block">
     <h4 class="card-title"><%= link_to user.name, user %></h4>
     <p class="card-text">
       <!-- Last Login: <%# pluralize(rand(31), "day") %> ago.<br>
       <%# pluralize(rand(5), "Month") %> behind entering data.<br> -->
       <small><%= mail_to user.email %></small>
     </p>
   </div>
   <ul class="list-group list-group-flush">

     <% user.winery_users.each do |wu| %>
      <li class="list-group-item">
        <%# wu.position %> <%= link_to wu.winery.name, wu.winery %>
      </li>
     <% end %>
   </ul>
   <div class="card-block">
     <%= link_to 'Edit', edit_user_path(user), class: "card-link" %>
     <% if current_user.admin? && !current_user?(user) %>
     <%= link_to "Destroy User", user, method: :delete,
                                 class: 'card-link btn btn-sm btn-danger',
                                  data: { confirm: "You sure?" } %>
                                  <% end %>
   </div>
 </div>
