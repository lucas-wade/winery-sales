<h1>Counties <%= link_to 'New County', new_county_path, class: 'btn btn-success'  %></h1>

<%= render @counties %>

<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Population</th>
      <th>Profile image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counties.each do |county| %>
      <tr>
        <td><%= county.name %></td>
        <td><%= county.population %></td>
        <td><%= attachment_image_tag county, :profile_image, :fill, 128, 128, format: 'jpg' %></td>
        <td><%= link_to 'Show', county %></td>
        <td><%= link_to 'Edit', edit_county_path(county) %></td>
        <td><%= link_to 'Destroy', county, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
