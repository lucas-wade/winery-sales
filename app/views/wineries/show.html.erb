<div class="row">
  <div class="col-md-4 col-lg-3">
    <%= image_tag attachment_url(@region, :profile_image, :fill, 620, 244, format: "jpg", fallback: random_wine_image), class: 'profile-image-wide' %>
    <br>
    <h3 style="line-height:1.6em;"><%= @winery.name %></h3>
    <div class="winery-info">
      <p>
        <strong>Regions:</strong><br>
        <% @winery.tasting_rooms.each do |tr| %>
          <%= link_to tr.region.name, tr %><br>
        <% end %>
      </p>
      <strong>Year established:</strong>
      <%= @winery.year_established %>
      <br>
      <strong>Num of employees:</strong>
      <%= @winery.num_of_employees %>
    </div>
    <br>

    <%= link_to 'Edit Winery Profile', edit_winery_path(@winery), class: 'btn btn-secondary' %>

  </div>
  <div class="col-md-12 col-lg-9">
    <% @winery.tasting_rooms.each do |tr| %>
      <%= render partial: 'tasting_rooms/sales_table', locals: {tasting_room: tr} %>
      <br>
    <% end %>

  </div>
</div>
