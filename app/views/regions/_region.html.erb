

 <div class="card card-block" style="margin-left:.5rem;margin-right:.5rem;display:inline-block;max-width:20rem;background-color:rgba(200,200,200,1.0);">
   <img class="card-img-top" style="max-width:16rem;" src="<%= attachment_url(region, :profile_image, :fill, 280, 120, format: "jpg", fallback: random_cali_image)%>">
   <div class="card-block">
     <h4 class="card-title"><%= link_to region.name, region %></h4>
     <p class="card-text">
       <%= pluralize(region.tasting_rooms.count, 'Tasting Room') %>
       <br>
     </p>
   </div>
   <ul class="list-group list-group-flush">
     <% region.tasting_rooms.each do |tr| %>
      <li class="list-group-item"><%= link_to tr.winery.name, tr %></li>
    <% end %>



   </ul>
   <div class="card-block">
     <%= link_to 'Edit', edit_region_path(region), class: "card-link" %>
     <% if current_user.admin? %>
     <%= link_to "Destroy Region", region, method: :delete,
                                 class: 'card-link btn btn-sm btn-danger',
                                  data: { confirm: "You sure?" } %>
                                  <% end %>
   </div>
 </div>
