<% provide(:title, "Edit Winery") %>

<div class="row">
  <div class="col-md-2 col-lg-3 col-xl-4"></div>
  <div class="col-md-8 col-lg-6 col-xl-4">
    <div class="card card-block">
      <h2>Editing <string><%= @winery.name %></strong></h2>
      <%= render 'form', winery: @winery %>
    </div>
    <% if admin? %>
      <%= link_to 'Destroy Winery', @winery, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>
