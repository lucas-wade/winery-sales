<p id="notice"><%= notice %></p>

<h1>Winer Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Winery</th>
      <th>Permissions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @winer_users.each do |winer_user| %>
      <tr>
        <td><%= winer_user.user %></td>
        <td><%= winer_user.winery %></td>
        <td><%= winer_user.permissions %></td>
        <td><%= link_to 'Show', winer_user %></td>
        <td><%= link_to 'Edit', edit_winer_user_path(winer_user) %></td>
        <td><%= link_to 'Destroy', winer_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

