<h1>Tasting Rooms <%= link_to 'New Tasting Room', new_tasting_room_path, class: 'btn btn-success' %></h1>

<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th>Winery</th>
      <th>Year established</th>
      <th>Num of employees</th>
      <th>Profile image</th>
      <th>Estate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasting_rooms.each do |tasting_room| %>
      <tr>
        <td><%= tasting_room.name %></td>
        <td><%= tasting_room.region.name %></td>
        <td><%= tasting_room.winery.name %></td>
        <td><%= tasting_room.year_established %></td>
        <td><%= tasting_room.num_of_employees %></td>
        <td><%= image_tag attachment_url(tasting_room, :profile_image, :fill, 120, 120, fallback: asset_path('wine/1.jpg')), style: "max-width: 64px"  %></td>
        <td><%= tasting_room.estate %></td>
        <td><%= link_to 'Show', tasting_room %></td>
        <td><%= link_to 'Edit', edit_tasting_room_path(tasting_room) %></td>
        <td><%= link_to 'Destroy', tasting_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
